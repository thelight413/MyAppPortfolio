<?xml version="1.0" encoding="utf-8"?>




<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ohrtsadok.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nanodegree Applications"
            android:id="@+id/textView"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="50dp"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
             />
        <Button

        android:text="@string/spotifystreamer"
        android:id="@+id/bSpotify"
        android:layout_below="@+id/textView"
        style="@style/CustomButton"
        android:onClick="openSpotifyStreamer"/>

    <Button
        style="@style/CustomButton"
        android:text="@string/footballscores"
        android:id="@+id/bScores"
        android:layout_below="@+id/bSpotify"

        android:onClick="openScores"/>

    <Button
        android:layout_below="@+id/bScores"
        android:text="@string/library"
        android:id="@+id/bLibrary"
        style="@style/CustomButton"
        android:onClick="openLibrary"
        />

    <Button
        style="@style/CustomButton"
        android:text="@string/builditbigger"
        android:id="@+id/bBigger"
        android:layout_below="@+id/bLibrary"

        android:onClick="openBIB"

        />

    <Button
        style="@style/CustomButton"
        android:text="@string/xyzreader"
        android:id="@+id/bReader"
        android:layout_below="@+id/bBigger"

        android:onClick="openXYZReader"

        />

    <Button
        style="@style/CustomButton"

        android:text="@string/capstone"
        android:id="@+id/bCapstone"
        android:layout_below="@+id/bReader"

        android:onClick="openCapstone"

        />
    </RelativeLayout>
</ScrollView>

